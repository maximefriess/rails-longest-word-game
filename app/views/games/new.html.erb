<h1>New Game</h1>
<ul>
<% @letters.each do |letter| %>
  <li><%= letter.capitalize %></li>
<% end %>
</ul>
<br>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters_array, @letters %>

  <input type="text" name="word" placeholder="Type your word">
  <input type="submit">
</form>
